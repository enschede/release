        <!--</repository>-->
        <repository>
            <id>dev-artifactory</id>
            <url>http://artifactory:9004/artifactory/libs-release-local/</url>
        </repository>
        <snapshotRepository>
            <id>dev-artifactory</id>
            <url>http://artifactory:9004/artifactory/libs-snapshot-local/</url>
        </snapshotRepository>
    </distributionManagement>

</project>
